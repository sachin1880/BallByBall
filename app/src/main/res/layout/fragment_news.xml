<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.NewsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/ll_item"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <androidx.cardview.widget.CardView-->
<!--                    android:id="@+id/cv_item"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:backgroundTint="@color/newscolor"-->
<!--                    app:cardCornerRadius="@dimen/_1sdp"-->
<!--                    app:cardElevation="@dimen/_1sdp"-->
<!--                    app:cardMaxElevation="@dimen/_1sdp"-->
<!--                    app:cardPreventCornerOverlap="true"-->
<!--                    app:cardUseCompatPadding="true">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/cric"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_3sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:gravity="start"
                                    android:text="India vs Pakistan the only Asia Cup Super Four game with"
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_doctor_des"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="start"
                                android:padding="@dimen/_3sdp"
                                android:text="it is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English."
                                android:textColor="@color/textcolor"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </LinearLayout>

<!--                </androidx.cardview.widget.CardView>-->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>